{{#if valid}}
    <h1>Profile of {{name}}</h1>
    <p>Name:<strong>{{name}}</strong></p>
    <p>Lastname:<strong>{{lastname}}</strong></p>
{{else}}
    You are not authorized!
{{/if}}

<!-- render array -->
{{#each pets}}
    {{this}}
{{/each}}

<br/>

<!-- render value of key-value pair -->
{{#each parents}}
    {{#each this}}
    {{this}}
    {{/each}}
{{/each}}

<br/>

<!-- render key-value pairs -->
{{#each parents}}
    {{#each this as |val key|}}
        {{key}} : {{val}} <br/>
    {{/each}}
{{/each}}
